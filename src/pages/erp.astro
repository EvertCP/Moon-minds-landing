---
import Layout from '../layouts/Layout.astro';
import NavBar from '../sections/NavBar.astro';
import Footer from '../sections/Footer.astro';
import { Card, CardContent } from "@/components/ui/card"
import { BadgeWrapper } from "@/components/BadgeWrapper"
import { Database, BarChart3, Calendar, Brain, Users, Shield, Eye, TrendingUp, ChartNoAxesCombined, ChartPie, CircleUser } from 'lucide-react'

const services = [
  {
    title: "Gestión de inventarios",
    description:
      "Maneja tus inventarios de manera centralizada y eficiente, lo que te permite optimizar la gestión de tus productos y mejorar la eficiencia de tus operaciones.",
    icon: Database,
    features: ["Integración de múltiples fuentes", "Limpieza automatizada", "Validación de calidad"],
    color: "from-blue-500 to-cyan-500",
    bgColor: "bg-blue-50",
    img: "../assets/ERP-1.jpg"
  },
  {
    title: "Contabilidad y finanzas",
    description:
      "Te ayuda a gestionar tus finanzas de manera centralizada y eficiente, lo que te permite mejorar la eficiencia de tus operaciones.",
    icon: BarChart3,
    features: ["Dashboards interactivos", "Reportes en tiempo real", "Análisis predictivo"],
    color: "from-purple-500 to-pink-500",
    bgColor: "bg-purple-50",
    img: "../assets/ERP-2.jpg"
  },
  {
    title: "Gestión de recursos humanos",
    description:
      "Gestiona los recursos humanos de manera eficiente, optimizando la productividad y mejorando la calidad de los servicios.",
    icon: Users,
    features: ["Dashboards interactivos", "Reportes en tiempo real", "Análisis predictivo"],
    color: "from-green-500 to-cyan-500",
    bgColor: "bg-green-50",
    img: "../assets/ERP-3.jpg"
  },
  {
    title: "Gestión de la cadena de suministro",
    description:
      "Opera la cadena de suministros para mejorar los procesos de producción y distribución.",
    icon: ChartPie,
    features: ["Dashboards interactivos", "Reportes en tiempo real", "Análisis predictivo"],
    color: "from-sky-500 to-blue-500",
    bgColor: "bg-sky-50",
    img: "../assets/ERP-4.jpg"
  },
  {
    title: "Gestión de proyectos",
    description:
      "Obten una visión general de tus proyectos y sus estados de manera centralizada y eficiente.",
    icon: ChartNoAxesCombined,
    features: ["Dashboards interactivos", "Reportes en tiempo real", "Análisis predictivo"],
    color: "from-indigo-500 to-pink-500",
    bgColor: "bg-indigo-50",
    img: "../assets/ERP-5.jpg"
  },
  {
    title: "Punto de venta",
    description:
      "Gestiona los puntos de venta de manera eficiente, optimizando la productividad y mejorando la calidad de los servicios.",
    icon: BarChart3,
    features: ["Dashboards interactivos", "Reportes en tiempo real", "Análisis predictivo"],
    color: "from-sky-500 to-blue-500",
    bgColor: "bg-sky-50",
    img: "../assets/dashboard.jpg"
  },
  {
    title: "Gestión de clientes",
    description:
      "Controla tu cartera de clientes, gestionando sus datos y historial de compras.",
    icon: CircleUser,
    features: ["Dashboards interactivos", "Reportes en tiempo real", "Análisis predictivo"],
    color: "from-purple-500 to-pink-500",
    bgColor: "bg-purple-50",
    img: "../assets/segmentacion.jpg"
  },
]

const benefits = [
  {
    icon: BarChart3,
    title: "Mejora la eficiencia operativa",
    description: "Optimiza los procesos de negocio y reduce los tiempos de respuesta.",
    color: "bg-blue-50 text-blue-600",
    borderColor: "border-blue-200",
  },
  {
    icon: Eye,
    title: "Facilita la toma de decisiones",
    description: "Proporciona informes y análisis en tiempo real, permitiendo a los gerentes tomar decisiones informadas basadas en datos precisos y actualizados.",
    color: "bg-emerald-50 text-emerald-600",
    borderColor: "border-emerald-200",
  },
  {
    icon: TrendingUp,
    title: "Reduce costos operativos",
    description: "Optimiza los procesos de negocio y reduce los tiempos de respuesta.",
    color: "bg-amber-50 text-amber-600",
    borderColor: "border-amber-200",
  },
  {
    icon: Calendar,
    title: "Mejora la colaboración",
    description: "Facilita la comunicación entre los miembros de la empresa y mejora la colaboración entre los equipos.",
    color: "bg-purple-50 text-purple-600",
    borderColor: "border-purple-200",
  },
  {
    icon: Brain,
    title: "Informes y análisis en tiempo real",
    description: "Proporciona informes y análisis en tiempo real, permitiendo a los gerentes tomar decisiones informadas basadas en datos precisos y actualizados.",
    color: "bg-rose-50 text-rose-600",
    borderColor: "border-rose-200",
  },
]
---

<Layout>
  <NavBar />
  <main class="py-1 mb-16">
    <section class="py-6 m-2">
      <div class="relative isolate px-2 pt-8 sm:px-6 sm:pt-14 lg:px-8">
        <div class="m-12 absolute inset-x-0 -top-40 -right-3/4 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"aria-hidden="true">
            <div class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#0c1aad] to-[#0097c5] opacity-30 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)">               
            </div>
        </div>
        <div class="container mx-2 m-8 px-2 sm:px-6 sm:m-16 flex flex-col items-center">
          <h1 class="text-6xl md:text-8xl font-medium text-center text-black mb-8 mt-8">¿Para que sirve un <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">ERP</span>?</h1>
          <p class="text-2xl md:text-4xl text-gray-700 mb-6 mt-8 text-align">
            Un <span class="font-semibold text-slate-900">ERP (Enterprise Resource Planning)</span> es un sistema de gestion empresarial que <span class="font-semibold text-slate-900">integra y automatiza</span> muchos de los procesos de negocio asociados con las operaciones de produccion y distribucion de una empresa.
          </p>
          <p class="text-2xl md:text-4xl text-gray-700 mb-6 mt-8 text-align">Son herramientas que permiten a las empresas <span class="font-semibold text-slate-900">gestionar sus operaciones de manera centralizada y eficiente</span>, lo que les permite mejorar la productividad, la calidad y la rentabilidad.</p>
          <button class="bg-gradient-to-r from-blue-600 to-indigo-600 px-8 py-4 text-lg font-semibold text-white shadow-lg transition-all duration-300 hover:from-blue-700 hover:to-indigo-700 hover:shadow-xl hover:scale-105 rounded m-8">
            Cotiza tu ERP
          </button>
        </div>
        <div>
          <div class="container mx-auto px-4 md:px-6 m-14">
            <div class="text-center mb-16">
              <h2 class="text-4xl md:text-6xl font-medium text-gray-900 mb-4">Todo tu negocio en una sola plataforma</h2>
              <p class="text-lg text-gray-600 max-w-2xl mx-auto">Descubre como un ERP puede mejorar la productividad, la calidad y la rentabilidad de tu negocio.</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {benefits.map((benefit) => (
                <div class={`group relative bg-white rounded-2xl p-8 shadow-sm border-2 ${benefit.borderColor} hover:shadow-lg transition-all duration-300 hover:-translate-y-1`}>
                  <div class="flex flex-col items-center text-center space-y-4">
                    <div class={`w-16 h-16 rounded-2xl ${benefit.color} flex items-center justify-center group-hover:scale-110 transition-transform duration-300`}>
                      {benefit.icon === BarChart3 && <BarChart3 />}
                      {benefit.icon === Eye && <Eye />}
                      {benefit.icon === TrendingUp && <TrendingUp />}
                      {benefit.icon === Calendar && <Calendar />}
                      {benefit.icon === Brain && <Brain />}
                    </div>
                    <span class="font-semibold text-lg text-gray-800">{benefit.title}</span>
                    <p class="text-gray-600 text-sm">{benefit.description}</p>
                  </div>
                </div>
              ))}
            </div>
            <div class="container mx-auto px-4 md:px-6 m-14">
                {/* Header */}
                <div class="text-center mb-16">
                  <BadgeWrapper variant="outline" className="mb-4 px-4 py-2 text-sm font-medium text-slate-900" client:load>
                    Nuestros Servicios
                  </BadgeWrapper>
                  <h2 class="text-4xl md:text-6xl font-bold text-slate-900 mb-6">
                    Beneficios{" "}
                    <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                      incluidos
                    </span>
                  </h2>
                  <p class="text-xl text-slate-600 max-w-3xl mx-auto">
                    Ofrecemos una suite completa de servicios de análisis de datos para transformar tu información en ventaja
                    competitiva
                  </p>
                </div>

            {/* Main Services Grid */}
            <div class="grid lg:grid-cols-2 gap-8 mb-16">
              {services.map((service, index) => (
                <Card
                  className="group hover:shadow-2xl transition-all duration-500 border-0 shadow-lg overflow-hidden"
                >
                  <CardContent className="p-0">
                    <div className={`${service.bgColor} p-8 relative overflow-hidden`}>
            {/* Background decoration */}
                    <div class="absolute top-0 right-0 w-32 h-32">
                      <service.icon className="w-full h-full stroke-black/20" />
                    </div>
                  
            {/* Icon */}
            <div
              class={`inline-flex p-3 rounded-xl bg-gradient-to-r ${service.color} text-white mb-6 shadow-lg`}
            >
              <service.icon className="w-8 h-8" />
            </div>
                  
            {/* Content */}
            <h3 class="text-2xl font-bold text-slate-900 mb-4 group-hover:text-blue-600 transition-colors">
              {service.title}
            </h3>
            <p class="text-slate-700 text-lg leading-relaxed mb-6">{service.description}</p>
                  
            {/* Features */}
            <div class="space-y-3">
              {service.features.map((feature, featureIndex) => (
                <div class="flex items-center space-x-3">
                  <div class={`w-2 h-2 rounded-full bg-gradient-to-r ${service.color}`}></div>
                  <span class="text-slate-600 font-medium">{feature}</span>
                </div>
              ))}
            </div>
            </div>
            {/* images */}
            {service.img && (
              <div class="w-full h-64">
                <img src={service.img} alt={service.title} class="w-full h-full object-cover" />
              </div>
            )}
                </CardContent>
              </Card>
            ))}
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
