---
import Layout from '../layouts/Layout.astro';
import NavBar from '../sections/NavBar.astro';
import Footer from '../sections/Footer.astro';
import { BarChart3, Zap, RefreshCw, Palette, Globe, Database, Megaphone, Wrench, Users, Code, Building2 } from 'lucide-react';

// Datos de los beneficios
const benefits = [
  {
    icon: BarChart3,
    title: "Resultados relevantes y de Alto Valor",
    description: "Soluciones que generan impacto medible y aportan valor real a tu negocio desde el primer momento.",
  },
  {
    icon: Zap,
    title: "Agilidad que reduce costos y riesgos",
    description: "Metodologías ágiles que permiten adaptación rápida y reducen significativamente los riesgos del proyecto.",
  },
  {
    icon: RefreshCw,
    title: "Adaptabilidad y mejora continua",
    description: "Capacidad de evolución constante, ajustándonos a las necesidades cambiantes de tu negocio.",
  },
];

// Datos de los servicios
const services = [
  {
    icon: Palette,
    title: "Branding",
    description: "Creamos identidades visuales únicas que conectan con tu audiencia y fortalecen tu presencia en el mercado.",
  },
  {
    icon: Globe,
    title: "Desarrollo Web",
    description: "Sitios web modernos, responsivos y optimizados que ofrecen experiencias excepcionales a tus usuarios.",
  },
  {
    icon: Database,
    title: "Análisis de Datos",
    description: "Transformamos datos en insights valiosos para la toma de decisiones estratégicas de tu empresa.",
  },
  {
    icon: Megaphone,
    title: "Publicidad",
    description: "Estrategias de marketing digital efectivas que maximizan tu alcance y retorno de inversión.",
  },
  {
    icon: Wrench,
    title: "Servicio Técnico",
    description: "Soporte técnico especializado para mantener tus sistemas funcionando de manera óptima.",
  },
  {
    icon: Users,
    title: "Asesoramiento",
    description: "Consultoría estratégica personalizada para impulsar el crecimiento y la innovación en tu negocio.",
  },
  {
    icon: Code,
    title: "Desarrollo de Software",
    description: "Soluciones de software a medida que automatizan procesos y mejoran la eficiencia operativa.",
  },
  {
    icon: Building2,
    title: "Sistemas ERP",
    description: "Implementación de sistemas ERP que integran y optimizan todos los procesos de tu empresa.",
  },
];
---

<Layout>
    <NavBar />
    <div class="w-full">
        <!-- Hero Section -->
        <section class="bg-gradient-to-br from-slate-50 to-blue-50 py-16 px-4">
          <div class="max-w-4xl mx-auto text-center mt-10">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-slate-800 mb-6 leading-tight">
              Te ofrecemos soluciones <span class="text-blue-600">personalizadas</span>
            </h1>
            <p class="text-lg md:text-xl text-slate-600 mb-8 max-w-3xl mx-auto leading-relaxed">
              Desarrollamos soluciones centradas en el usuario. Combinamos Design Thinking y metodologías Ágiles para
              crear soluciones rápidas, efectivas y orientadas a las necesidades reales de tus proyectos.
            </p>
            <button class="bg-slate-800 hover:bg-slate-700 text-white px-8 py-3 text-lg font-semibold rounded-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
              Cotiza tu proyecto
            </button>
          </div>
        </section>
      
        <!-- Why Work With Us Section -->
        <section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-20 px-4">
          <div class="max-w-6xl mx-auto">
            <div class="text-center mb-16">
              <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
                ¿Por qué trabajar con <span class="text-blue-400">nosotros</span>?
              </h2>
              <p class="text-slate-300 text-lg md:text-xl max-w-4xl mx-auto leading-relaxed">
                Somos innovación centrada en el usuario. Combinamos Design Thinking y metodologías Ágiles para crear
                soluciones rápidas, efectivas y orientadas a las necesidades reales de tus usuarios.
              </p>
            </div>
      
            <div class="grid md:grid-cols-3 gap-8">
              {benefits.map((benefit) => (
                <div class="text-center group">
                  <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-8 h-full transition-all duration-300 hover:bg-slate-700/50 hover:border-blue-500/30 hover:shadow-xl hover:shadow-blue-500/10 hover:-translate-y-2">
                    <div class="flex justify-center mb-6">
                      <div class="bg-blue-500/10 p-4 rounded-full group-hover:bg-blue-500/20 transition-colors duration-300">
                        <benefit.icon className="w-8 h-8 text-blue-400" />
                      </div>
                    </div>
                    <h3 class="text-xl font-semibold text-white mb-4">{benefit.title}</h3>
                    <p class="text-slate-300 leading-relaxed">{benefit.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </section>
      
        <!-- Services Section -->
        <section class="bg-gradient-to-br from-slate-50 to-blue-50 py-20 px-4">
          <div class="max-w-6xl mx-auto">
            <div class="text-center mb-16">
              <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-800 mb-6">
                Nuestros <span class="text-blue-600">Servicios</span>
              </h2>
              <p class="text-slate-600 text-lg md:text-xl max-w-3xl mx-auto leading-relaxed">
                Elevamos tu marca por un ciclo donde analizaremos, crearemos y
                potenciaremos tu producto para generar los resultados esperados.
              </p>
            </div>
      
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
              {services.map((service) => (
                <div class="group bg-white/80 backdrop-blur-sm border border-slate-200 rounded-xl p-6 transition-all duration-300 hover:shadow-xl hover:border-blue-300 hover:-translate-y-1">
                  <div class="flex items-center gap-3 mb-4">
                    <div class="bg-blue-50 p-2 rounded-lg group-hover:bg-blue-100 transition-colors duration-300">
                      <service.icon className="w-6 h-6 text-blue-400" />
                    </div>
                    <h3 class="text-lg font-semibold text-slate-800 group-hover:text-blue-600 transition-colors duration-300">
                      {service.title}
                    </h3>
                  </div>
                  <p class="text-slate-600 leading-relaxed text-sm">
                    {service.description}
                  </p>
                </div>
              ))}
            </div>
          </div>
        </section>
      </div>
    <Footer />
</Layout>

